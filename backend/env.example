# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DB_NAME=sportello_notai
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Email (per MFA OTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password

# AWS S3 / Storage (per blob documenti)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=sportello-notai-docs
AWS_S3_REGION_NAME=eu-west-1

# KMS (Key Management Service)
AWS_KMS_KEY_ID=your-kms-key-id

# PEC Provider
PEC_PROVIDER_API_URL=https://api.pec-provider.com
PEC_PROVIDER_API_KEY=your-pec-api-key
PEC_SENDER_EMAIL=sportello@pec.example.com

# Firma Digitale Provider
SIGNATURE_PROVIDER=infocert
SIGNATURE_PROVIDER_API_URL=https://api.infocert.com
SIGNATURE_PROVIDER_API_KEY=your-signature-api-key

# RTC Server (WebRTC SFU)
RTC_SERVER_URL=https://rtc.sportello-notai.com
RTC_SERVER_API_KEY=your-rtc-api-key

# Conservatore Accreditato
CONSERVATOR_PROVIDER=conservazione-digitale
CONSERVATOR_API_URL=https://api.conservatore.com
CONSERVATOR_API_KEY=your-conservator-api-key

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000

# Redis (per cache e Celery)
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

